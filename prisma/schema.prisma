generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Screen {
  id        String   @id @default(uuid())
  name      String   @unique
  config    Json
  themeName String?  @map("theme_name")
  version   Int      @default(1)
  isActive  Boolean  @default(true) @map("is_active")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  versions ScreenVersion[]

  @@map("screens")
}

model ScreenVersion {
  id         String   @id @default(uuid())
  screenName String   @map("screen_name")
  version    Int
  config     Json
  themeName  String?  @map("theme_name")
  createdAt  DateTime @default(now()) @map("created_at")

  screen Screen @relation(fields: [screenName], references: [name])

  @@unique([screenName, version])
  @@map("screen_versions")
}
