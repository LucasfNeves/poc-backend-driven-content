generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Screen {
  id        String   @id @default(uuid())
  name      String   @unique
  config    Json
  version   Int      @default(1)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("screens")
}
